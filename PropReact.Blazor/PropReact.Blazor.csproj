        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/wihrl/PropReact/</RepositoryUrl>
        <PackageId>wihrl.PropReact.Blazor</PackageId>
